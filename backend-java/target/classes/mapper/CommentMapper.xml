<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blog.backend.mapper.CommentMapper">

    <resultMap id="CommentResultMap" type="com.blog.backend.entity.Comment">
        <id property="id" column="id" />
        <result property="userId" column="user_id" />
        <result property="postId" column="post_id" />
        <result property="content" column="content" />
        <result property="createdAt" column="created_at" />
        <association property="user" javaType="com.blog.backend.entity.User">
            <id property="id" column="user_id" />
            <result property="username" column="username" />
            <result property="email" column="email" />
        </association>
    </resultMap>

    <select id="findByPostId" parameterType="string" resultMap="CommentResultMap">
        SELECT c.*, u.username, u.email 
        FROM comments c 
        JOIN users u ON c.user_id = u.id 
        WHERE c.post_id = #{postId} 
        ORDER BY c.created_at DESC
    </select>

    <insert id="insert" parameterType="com.blog.backend.entity.Comment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO comments (user_id, post_id, content, created_at) 
        VALUES (#{userId}, #{postId}, #{content}, NOW())
    </insert>

</mapper>
